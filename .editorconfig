root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = false
max_line_length = 120
tab_width = 2

[*.scss]
tab_width = 4

[*.ts]
indent_size = 4
tab_width = 4

[{*.json,*.jsonc,.eslintrc,.stylelintrc}]
tab_width = 4

[{*.htm,*.html,*.sht,*.shtm,*.shtml}]
indent_size = 4
max_line_length = 250
tab_width = 4
